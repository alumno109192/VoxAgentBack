# Application Configuration
NODE_ENV=development
PORT=4000
APP_NAME=voice-assistant
APP_VERSION=1.0.0

# Database Configuration
MONGO_URI=mongodb://localhost:27017/voice-assistant
MONGO_USER=
MONGO_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=change-this-super-secret-jwt-key-min-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Bland Voice API Configuration
BLAND_API_KEY=your-bland-api-key-here
BLAND_API_SECRET=your-bland-api-secret-here
BLAND_WEBHOOK_SECRET=your-bland-webhook-secret-here
BLAND_TOKEN_CACHE_TTL=300
BLAND_API_BASE_URL=https://api.bland.ai/v1

# SendGrid Email Configuration (Optional)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=Voice Assistant

# Stripe Payment Configuration (Optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# AWS S3 Storage Configuration
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_PRESIGNED_URL_EXPIRES=3600

# OpenAI Configuration (Optional - for Whisper fallback)
OPENAI_API_KEY=

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Encryption Configuration
ENCRYPTION_KEY=change-this-32-character-key-now-please
ENCRYPTION_ALGORITHM=aes-256-gcm

# Feature Flags
ENABLE_REALTIME=true
ENABLE_STRIPE=false
ENABLE_SENDGRID=false
ENABLE_WHISPER_FALLBACK=false
ALLOW_PAYMENT_EMULATION=true

# Payment Emulation Configuration
EMULATOR_KEY=dev-emulator-key-change-in-prod
PAYMENTS_JSON_PATH=./data/payments

# Mock Data Configuration
MOCK_DATA_PATH=./data/mock

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Data Retention Configuration (days)
CALL_RECORDING_RETENTION_DAYS=90
TRANSCRIPTION_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=730
